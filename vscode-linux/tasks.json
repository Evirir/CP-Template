{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file (main)",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=gnu++20",
				"-DCP_DISABLE_O3",
				"-Wall",
				"-Wextra",
				"-fdiagnostics-color=always",
				"-fsanitize=undefined,address",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file (gdb)",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=gnu++20",
				"-DCP_DISABLE_O3",
				"-Wall",
				"-Wextra",
				"-fdiagnostics-color=always",
				"-fsanitize=undefined",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build"
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file (O3)",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-O3",
				"-std=gnu++20",
				"-Wall",
				"-Wextra",
				"-fdiagnostics-color=always",
				"-fsanitize=undefined,address",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build"
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"label": "Run current C++ file",
			"type": "shell",
			"command": "${fileDirname}/${fileBasenameNoExtension}",
			"options": {
				"cwd": "${fileDirname}"
			},
			"presentation": {
				"clear": true
			},
			"problemMatcher": []
		}
	]
}